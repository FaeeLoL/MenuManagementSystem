<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".RestaurantInfoActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="227dp"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_notification_off"
            android:tint="@color/colorAccent" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/restaurant_info_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/restaurant_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            tools:text="Name" />

        <TextView
            android:id="@+id/restaurant_info_subname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/colorPrimary"
            tools:text="Subname" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/restaurant_info_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:paddingStart="38dp"
        android:paddingEnd="38dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:columnCount="1"
            android:rowCount="2">

            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center"
                android:src="@drawable/ic_phone"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Call"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:columnCount="1"
            android:rowCount="2">

            <ImageView
                android:id="@+id/ic_location"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center"
                android:src="@drawable/ic_location"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Location"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:columnCount="1"
            android:rowCount="2">

            <ImageView
                android:id="@+id/ic_network"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center"
                android:src="@drawable/ic_network"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Website"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </GridLayout>

    </RelativeLayout>

    <View
        android:id="@+id/restaurant_info_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/empty_description" />




</LinearLayout>